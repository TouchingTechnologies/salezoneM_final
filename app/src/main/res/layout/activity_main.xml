<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"

              android:gravity="center_horizontal"
              android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/app" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/lbl_you_are_at"
        android:textColor="@color/maincolor"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="15dp"
        android:textColor="@color/white"
        android:textSize="16dp" />
        <ImageView
            android:id="@+id/iv_profilePic"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:onClick="puticon"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_upload_image"
            android:background="@drawable/tx_bg"
            android:layout_gravity="center_horizontal"/>

    <EditText
        android:id="@+id/business_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginTop="40dp"
        android:drawableStart="@drawable/name_bis"
        android:drawableLeft="@drawable/name_bis"
        android:background="@drawable/texbox"
        android:hint="@string/hint_bizname"
         />
        <EditText
            android:id="@+id/mobile"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:singleLine="true"
            android:background="@drawable/texbox"
            android:drawableStart="@drawable/phone"
            android:drawableLeft="@drawable/phone"
            android:inputType="phone"
            android:hint="@string/phone"
          />
        <Button
            android:id="@+id/btnLocationUpdates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@drawable/primary_round"
            android:onClick="register"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/btn_start_location_updates"
            />

    </LinearLayout>

</ScrollView>
